
@model IEnumerable<proyectoFi.Models.Vendedor>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
    <body>
        <a asp-action="Create">Agregar vendedor</a>
         <h1>REGISTRO DE VENDEDORES</h1>

        <table class="table table-bordered">
            <tr>
                <td scope="col">CODIGO</td>
                <td scope="col">NOMBRE</td>
                <td scope="col">APELLIDO</td>
                <td scope="col">TELEFONO</td>
                 <td scope="col">EDITAR</td>
                  <td scope="col">ELIMINAR</td>
            </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td scope="col">@item.CodVendedor</td>
                <td scope="col">@item.NomVendedor</td>
                <td scope="col">@item.ApeVendedor</td>
                <td scope="col">@item.TelVendedor</td>
                <td scope="col"><a asp-action="Edit" asp-route-id="@item.CodVendedor">Editar</a></td>
                <td scope="col"><a asp-action="Delete" asp-route-id="@item.CodVendedor">Eliminar</a></td>
            </tr>
        }
        </table>
</body>
</html>